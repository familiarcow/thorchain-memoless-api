    "@cosmjs/stargate": "^0.36.1",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.1",
    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "pg": "^8.11.0",
    "protobufjs": "^7.5.4",
    "qrcode": "^1.5.4",
    "secp256k1": "^5.0.1",
