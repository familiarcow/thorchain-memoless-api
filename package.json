  "description": "A headless API service for THORChain memoless transaction registration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cp src/swagger.yaml dist/",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
