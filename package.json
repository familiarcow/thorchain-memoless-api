    "@types/express": "^4.17.17",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.1",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.3",
